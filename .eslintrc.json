{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "jasmine": true
  },
  "plugins": [
    "import"
  ],
  "rules": {
    "no-trailing-spaces": "error",
    "indent": [ "error", 2 ],
    "unicode-bom": [ "error", "never" ],
    "no-warning-comments": "warn",
    "semi": "error",
    "no-extra-semi": "error",
    "no-new-wrappers": "error",
    "guard-for-in": "error",
    "no-multi-str": "error",
    "no-array-constructor": "error",
    "no-new-object": "error",
    "camelcase": "error",
    "brace-style": "error",
    "object-curly-spacing": "error",
    "object-property-newline": "error",
    "array-bracket-spacing": "error",
    "quotes": [ "error", "single" ],
    "no-undef": "error"
  }
}
